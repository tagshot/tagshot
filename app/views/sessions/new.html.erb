<h1>Login</h1>
<% if flash[:error] %>
  <p><%= flash[:error] %>
<% end %>
<% if flash[:notice] %>
  <p><%= flash[:notice] %>
<% end %>
<form action="<%= session_path %>" method="POST">
  <input type="text" value="<%= params[:login] %>" name="login" />
  <input type="password" value="" name="password" />
  <input type="submit" value="Login" />
</form>
<p>
	<% if defined?(RUBY_VERSION) or defined?(VERSION) %>
    <%= [defined?(RUBY_ENGINE) ? RUBY_ENGINE.capitalize : 'Ruby', defined?(RUBY_VERSION) ? RUBY_VERSION : VERSION].join(' ') + ' | ' %>
    <% end %>
    <%= "Rails #{Rails.version} | #{Rails.env.capitalize} | " %>
    <%= "Tagshot #{Tagshot.version}" %>
</p>
